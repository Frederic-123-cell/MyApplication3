<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EmergencyActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="紧急求助"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="紧急联系人:"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_emergency_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入紧急联系人电话号码"
        android:inputType="phone"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/btn_save_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存联系人"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:minHeight="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="摔倒检测状态:"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_fall_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未检测到摔倒"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_simulate_fall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模拟摔倒检测"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:minHeight="60dp"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="障碍物检测:"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_obstacle_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="障碍物检测已停止"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_start_obstacle_detection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始检测"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"
            android:minHeight="60dp"/>

        <Button
            android:id="@+id/btn_stop_obstacle_detection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止检测"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:minHeight="60dp"/>
    </LinearLayout>

</LinearLayout>